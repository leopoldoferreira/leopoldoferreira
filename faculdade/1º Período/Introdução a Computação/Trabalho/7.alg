algoritmo "Peso"
// Função :
// Autor :
// Data : 3/22/2014
// Seção de Declarações 
var
peso,pesof,pesof2:real
inicio
      Escreva("Digite seu peso:")
      Leia(peso)
      // Seção de Comandos
      Pesof<-peso+peso*0.15
      Pesof2<-peso-peso*0.2
      // Saída
      Escreval("O peso ao engordar 15% é:",pesof)
      Escreval("O peso ao emagrecer 20% é:",pesof2)
      
fimalgoritmo
