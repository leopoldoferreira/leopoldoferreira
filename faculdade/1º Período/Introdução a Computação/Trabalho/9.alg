algoritmo "Trapézio"
// Função :
// Autor :
// Data : 3/22/2014
// Seção de Declarações 
var
      baseme,basema,altura,area:real
inicio
      Escreva("Digite a base menor, a base maior e a altura do trapézio:")
      Leia(baseme,basema,altura)
      // Seção de Comandos
      area<-((baseme+basema)*altura)/2
      // Saída
      Escreval("A área do trapézio é:",area)
      
fimalgoritmo
