algoritmo "Peso em gramas"
// Função :
// Autor :
// Data : 3/22/2014
// Seção de Declarações 
var
      peso,gr:real
inicio
      Escreva("Digite seu peso em kilogramas:")
      Leia(peso)
      // Seção de Comandos
      gr<-peso*1000
      // Saída
      Escreval("Seu peso em gramas é:",gr)
      
fimalgoritmo
